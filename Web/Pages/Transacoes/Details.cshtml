@page "{id:guid}"
@model Web.Pages.Transacoes.DetailsModel
@{
    ViewData["Title"] = "Detalhes da Transação";
}

<h2>Detalhes da Transação</h2>

@if (Model.Transacao == null)
{
    <div class="alert alert-danger">Transação não encontrada.</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Transacao.Descricao</dd>
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Transacao.Data.ToShortDateString()</dd>
        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">@Model.Transacao.Valor.ToString("C")</dd>
        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.CategoriaNome</dd>
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Transacao.Tipo</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Transacao.Status</dd>
    </dl>
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
}
