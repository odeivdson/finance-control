@page "{id:guid}"
@model Web.Pages.Metas.DeleteModel
@{
    ViewData["Title"] = "Excluir Meta";
}

<h2>Excluir Meta</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<form method="post">
    <div class="form-group">
        <label>Tem certeza que deseja excluir a meta <strong>@Model.Meta.Descricao</strong>?</label>
    </div>
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
