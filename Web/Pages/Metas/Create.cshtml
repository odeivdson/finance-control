@page
@model Web.Pages.Metas.CreateModel
@{
    ViewData["Title"] = "Nova Meta";
}

<h2>Nova Meta</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<form method="post">
    <div class="form-group">
        <label asp-for="Meta.Descricao"></label>
        <input asp-for="Meta.Descricao" class="form-control" />
        <span asp-validation-for="Meta.Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Meta.ValorAlvo"></label>
        <input asp-for="Meta.ValorAlvo" class="form-control" />
        <span asp-validation-for="Meta.ValorAlvo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Meta.ValorAcumulado"></label>
        <input asp-for="Meta.ValorAcumulado" class="form-control" />
        <span asp-validation-for="Meta.ValorAcumulado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Meta.DataLimite"></label>
        <input asp-for="Meta.DataLimite" class="form-control" type="date" />
        <span asp-validation-for="Meta.DataLimite" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</form>
