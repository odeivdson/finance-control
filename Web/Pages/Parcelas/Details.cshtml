@page "{id:guid}"
@model Web.Pages.Parcelas.DetailsModel
@{
    ViewData["Title"] = "Detalhes da Parcela";
}

<h2>Detalhes da Parcela</h2>

@if (Model.Parcela == null)
{
    <div class="alert alert-danger">Parcela não encontrada.</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Número</dt>
        <dd class="col-sm-10">@Model.Parcela.Numero</dd>
        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">@Model.Parcela.Valor.ToString("C")</dd>
        <dt class="col-sm-2">Data Vencimento</dt>
        <dd class="col-sm-10">@Model.Parcela.DataVencimento.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Parcela.Status</dd>
    </dl>
    <a asp-page="Index" asp-route-transacaoId="@Model.Parcela.TransacaoId" class="btn btn-secondary">Voltar</a>
}
