@page "{id:guid}"
@model Web.Pages.Parcelas.DeleteModel
@{
    ViewData["Title"] = "Excluir Parcela";
}

<h2>Excluir Parcela</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<form method="post">
    <input type="hidden" asp-for="Parcela.TransacaoId" />
    <div class="form-group">
        <label>Tem certeza que deseja excluir a parcela número <strong>@Model.Parcela.Numero</strong>?</label>
    </div>
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" asp-route-transacaoId="@Model.Parcela.TransacaoId" class="btn btn-secondary">Cancelar</a>
</form>
